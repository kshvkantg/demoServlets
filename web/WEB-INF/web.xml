<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet><!--defining the servlet-->
        <servlet-name>abc</servlet-name>  <!--any arbitrary name we can provide to servlets on our own -->
        <servlet-class>AddNumberByServlets.AddNumber</servlet-class> <!-- the location name and class at
        which our servlets is stored in source file-->
    </servlet>

    <servlet-mapping><!--mapping that defined servlet to the html file-->
        <servlet-name>abc</servlet-name><!-- same name that is defined above-->
        <url-pattern>/AddNumber</url-pattern><!-- name of the action button in html tag-->
    </servlet-mapping>

</web-app>